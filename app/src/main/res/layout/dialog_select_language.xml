<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <net.dmceu.booneu.View.CustomTextView
        style="@style/CustomTitleTextDialog"
        android:text="เลือกภาษา"/>

    <LinearLayout
       style="@style/CustomLayoutButtonLanguage">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/thailand"/>

        <net.dmceu.booneu.View.CustomTextView
            style="@style/CustomTextLanguage"
            android:text="ภาษาไทย"/>

    </LinearLayout>

    <LinearLayout
        style="@style/CustomLayoutButtonLanguage">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/united_kingdom" />

        <net.dmceu.booneu.View.CustomTextView
            style="@style/CustomTextLanguage"
            android:text="English"/>

    </LinearLayout>



</LinearLayout>
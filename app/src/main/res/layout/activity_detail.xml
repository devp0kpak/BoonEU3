<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="network.dhammakaya.booneu3.Activity.DetailActivity">

    <LinearLayout
        style="@style/ThemeTitleBar" >

        <ImageView
            android:id="@+id/iv_btn_back"
            style="@style/ButtonBack"/>

        <network.dhammakaya.booneu3.View.CustomTextView
            android:layout_width="0dp"
            android:layout_weight="13"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:text="13" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="27"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <network.dhammakaya.booneu3.View.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="ธันวาคม"/>

            <network.dhammakaya.booneu3.View.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="2561"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:gravity="center|right">

            <network.dhammakaya.booneu3.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center|left"
                android:textSize="20sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_favorite"
                android:drawableTint="@color/red"
                android:textColor="@color/red"
                android:background="@drawable/bg_btn_favorite_detail"
                android:text="รายการโปรด" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include  layout="@layout/view_item_picture"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"/>

            <include  layout="@layout/view_item_picture"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"/>

            <include  layout="@layout/view_item_picture"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"/>

            <include  layout="@layout/view_item_picture"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>

        <network.dhammakaya.booneu3.View.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Event Name"/>

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <network.dhammakaya.booneu3.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/ic_location"
                android:drawableTint="@color/grey_400"
                android:drawablePadding="5dp"
                android:textSize="25sp"
                android:textColor="@color/blue_700"
                android:text="location name for event"/>

            <network.dhammakaya.booneu3.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_map"
                android:text="แผนที่"/>

        </LinearLayout>

        <network.dhammakaya.booneu3.View.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableStart="@drawable/ic_clock"
            android:drawableTint="@color/grey_400"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:drawablePadding="5dp"
            android:textSize="25sp"
            android:textColor="@color/grey_600"
            android:text="09.00-18.00"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <network.dhammakaya.booneu3.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_btn_detail"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_assignment"
                android:drawableTint="@color/orange_600"
                android:textColor="@color/orange_600"
                android:textSize="20sp"
                android:text="รายละเอียด"/>

            <network.dhammakaya.booneu3.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_btn_detail"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_event_note"
                android:drawableTint="@color/orange_600"
                android:textColor="@color/orange_600"
                android:textSize="20sp"
                android:text="กำหนดการ"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

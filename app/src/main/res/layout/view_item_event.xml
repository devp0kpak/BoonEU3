<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_item_event"
        android:layout_marginTop="15dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="23">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_event_image"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/boon_img" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="77"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <network.dhammakaya.booneu3.View.CustomTextView
                android:id="@+id/tv_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:text="พิธีบูชาข้าวพระ"/>

            <network.dhammakaya.booneu3.View.CustomTextView
                android:id="@+id/tv_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_location"
                android:drawableTint="@color/grey_700"
                android:textSize="16sp"
                android:text="Wat Phra Dhammakaya Frankfurt"/>

            <network.dhammakaya.booneu3.View.CustomTextView
                android:id="@+id/tv_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_clock"
                android:drawableTint="@color/grey_700"
                android:textSize="16sp"
                android:text="9.00 - 18.00"/>

        </LinearLayout>

    </LinearLayout>

    <network.dhammakaya.booneu3.View.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_item_event_status"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:textSize="18sp"
        android:text="ยังไม่เริ่มกิจกรรม"/>

</FrameLayout>
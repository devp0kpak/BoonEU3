<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="network.dhammakaya.booneu3.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:background="@color/color_top_title"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="42"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="100">

                <network.dhammakaya.booneu3.View.CustomTextView
                    android:id="@+id/tv_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center"
                    android:orientation="vertical">

                    <network.dhammakaya.booneu3.View.CustomTextView
                        android:id="@+id/tv_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ธันวาคม"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <network.dhammakaya.booneu3.View.CustomTextView
                        android:id="@+id/tv_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2561"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="42"
                android:paddingBottom="25dp"
                android:paddingTop="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_flag"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/austria"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp" />

                    <network.dhammakaya.booneu3.View.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="70"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Austria"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_more_vert"
                    android:tint="@color/white" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="75"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mcv_dateTextAppearance="@style/CustomTextAppearance"
                app:mcv_firstDayOfWeek="monday"
                app:mcv_headerTextAppearance="@style/CustomTextAppearance"
                app:mcv_selectionColor="@color/white"
                app:mcv_showOtherDates="all"
                app:mcv_tileHeight="match_parent"
                app:mcv_tileSize="match_parent"
                app:mcv_tileWidth="match_parent"
                app:mcv_weekDayTextAppearance="@style/CustomTextAppearance" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <network.dhammakaya.booneu3.View.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/grey_200"
                android:gravity="center"
                android:text="กิจกรรม"
                android:textSize="25sp"
                android:textStyle="bold" />

            <include layout="@layout/view_item_event" />

            <include layout="@layout/view_item_event" />

        </LinearLayout>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:elevation="50dp"
            android:background="@drawable/bg_btn_favorite"
            android:src="@drawable/ic_favorite"
            android:tint="@color/white"
            android:layout_gravity="right|bottom" />

    </FrameLayout>

</LinearLayout>
